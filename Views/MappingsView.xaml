<UserControl x:Class="XB2Midi.Views.MappingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Buttons Panel -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    Margin="10,5">
            <Button x:Name="SaveMappingsButton" 
                    Content="Save Mappings" 
                    Click="SaveMappingsButton_Click"
                    Margin="0,0,10,0"
                    Padding="10,5"/>
            <Button x:Name="LoadMappingsButton" 
                    Content="Load Mappings" 
                    Click="LoadMappingsButton_Click"
                    Padding="10,5"/>
        </StackPanel>

        <!-- Mappings List -->
        <ListView Name="MappingsListView" 
                  Grid.Row="1" 
                  Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Controller Input" Width="110" 
                                  DisplayMemberBinding="{Binding ControllerInput}"/>
                    <GridViewColumn Header="MIDI Type" Width="100" 
                                  DisplayMemberBinding="{Binding MessageType}"/>
                    <GridViewColumn Header="Channel" Width="70" 
                                  DisplayMemberBinding="{Binding Channel}"/>
                    <GridViewColumn Header="Note/CC#" Width="70" 
                                  DisplayMemberBinding="{Binding DisplayNumber}"/>
                    <GridViewColumn Header="Status" Width="100" 
                                  DisplayMemberBinding="{Binding Status}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>