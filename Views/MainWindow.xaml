<Window x:Class="XB2Midi.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:XB2Midi.Views"
        Title="XB2Midi Controller" Height="600" Width="800">
    <DockPanel>
        <TabControl>
            <TabItem Header="Debug Log">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Margin="10">
                        <TextBlock Text="Controller Input Log" FontWeight="Bold"/>
                        <Button Content="Clear Log" Click="ClearLog_Click" 
                                Margin="0,5,0,5" Padding="10,5" 
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                    <ListBox x:Name="InputLog" Margin="10"/>
                </DockPanel>
            </TabItem>
            <TabItem Header="Visual Monitor">
                <views:ControllerVisualizer x:Name="Visualizer"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>